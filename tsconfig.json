{
   "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "sourceMap": false,
      "typeRoots": [
         "./src"
      ],
      "types": [
         "jquery",
         "node"
      ]
   },
   "exclude": [
      "node_modules",
      "dist",
      "webpack.config.js"
   ],
   "include": [
      "src/**/*",
   ]
}